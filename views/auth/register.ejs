                    <% if(messages.error) {%>
                    <span class="text-red-500 text-sm"><%= messages.error %></span>
                    <% } %>
                         <div class="my-5 text-sm">
                            <label for="name" class="block text-black" style="color: #33b4ff; font-weight: 700;">NAME</label>
