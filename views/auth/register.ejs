    <section class="login flex justify-center" style="margin-top: 5.8rem;">
        <div class="bg-white lg:w-4/12 md:6/12 w-10/12 m-auto my-1 shadow-md" style="border-radius: 20px; width: 50rem; box-shadow: 5px 5px gray;">
